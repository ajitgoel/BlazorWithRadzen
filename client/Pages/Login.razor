@page "/login"
@layout LoginLayout
@inherits RadzenCrm3.Pages.LoginComponent

@using Radzen
@using Radzen.Blazor
@using RadzenCrm3.Models.Crm
@using Microsoft.AspNetCore.Identity;
@using RadzenCrm3.Models
@using Microsoft.AspNetCore.Authorization


<form method="post" action="account/login">
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Login">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Action="/Account/Login" Method="post" TItem="dynamic">
          <ChildContent>
            <RadzenLabel Component="Username" style="display: block; margin-top: 16px" Text="Username">
            </RadzenLabel>
            <RadzenTextBox style="width: 100%" Name="Username">
            </RadzenTextBox>
            <RadzenLabel Component="Password" style="display: block; margin-top: 16px" Text="Password">
            </RadzenLabel>
            <RadzenTextBox style="width: 100%" Name="Password">
            </RadzenTextBox>
            <RadzenButton ButtonType="ButtonType.Submit" style="margin-top: 16px; width: 100%" Text="Login">
            </RadzenButton>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
</form>
