@page "/tasks"
@layout MainLayout
@inherits RadzenCrm3.Pages.TasksComponent

@using Radzen
@using Radzen.Blazor
@using RadzenCrm3.Models.Crm
@using Microsoft.AspNetCore.Identity;
@using RadzenCrm3.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tasks">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Count="@getTasksCount" Data="@getTasksResult" FilterMode="FilterMode.Advanced" TItem="RadzenCrm3.Models.Crm.Task" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" Property="Id" Title="Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" Property="Title" Title="Title">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" FilterProperty="Opportunity.Name" Property="OpportunityId" SortProperty="Opportunity.Name" Title="Opportunity">
              <Template Context="data">
              @(data.Opportunity?.Name)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" FormatString="{0:MM/dd/yyyy}" Property="DueDate" Title="Due Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" FilterProperty="TaskType.Name" Property="TypeId" SortProperty="TaskType.Name" Title="Task Type">
              <Template Context="radzenCrm3ModelsCrmTask">
                <RadzenIcon Icon="settings_phone" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskType.Name == "Call")">
                </RadzenIcon>
                <RadzenIcon Icon="video_call" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskType.Name == "Online Meeting")">
                </RadzenIcon>
                <RadzenIcon Icon="email" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskType.Name == "Email")">
                </RadzenIcon>
                <RadzenLabel Text="@($"{(radzenCrm3ModelsCrmTask.TaskType.Name)}")">
                </RadzenLabel>
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" FilterProperty="TaskStatus.Name" Property="StatusId" SortProperty="TaskStatus.Name" Title="Task Status">
              <Template Context="radzenCrm3ModelsCrmTask">
                <RadzenIcon Icon="check_circle" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskStatus.Name == "Complete")">
                </RadzenIcon>
                <RadzenIcon Icon="cancel" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskStatus.Name == "Not Started")">
                </RadzenIcon>
                <RadzenIcon Icon="autorenew" style="vertical-align: middle" Visible="@(radzenCrm3ModelsCrmTask.TaskStatus.Name == "In Progress")">
                </RadzenIcon>
                <RadzenLabel Text="@($"{(radzenCrm3ModelsCrmTask.TaskStatus.Name)}")">
                </RadzenLabel>
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RadzenCrm3.Models.Crm.Task" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="radzenCrm3ModelsCrmTask">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, radzenCrm3ModelsCrmTask))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
